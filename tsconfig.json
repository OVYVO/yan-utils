{
  "include": ["src/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "resolveJsonModule": false,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "noImplicitAny": false,
    "lib": ["es5", "es6", "dom"],
    "target": "es5",
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "tslib": ["node_modules/tslib/tslib.d.ts"]
    }
  }
}
